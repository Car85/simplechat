<p>Currently chatting in <strong><%= @room_id %></strong></p>

<div id="chat-container"> 
  <div id="chat-messages">
       <%= for message <- @messages do %>
          <p><strong><%= message %>:</strong></p>
        <% end %>
  </div>
  <form phx-submit="submit_message">
     <input type="text"
     name="message" 
     phx-submit="submit-message" placeholder="Enter Your Message..."/>
      <button type="submit" />
   </form> 
</div>

