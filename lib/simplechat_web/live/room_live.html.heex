<p>Currently chatting in <strong><%= @room_id %></strong></p>

<div id="chat-container"> 
  <div id="chat-messages" phx-update="replace">
       <%= for message <- @messages do %>
       <p id={message.uuid}> <%= message.content %> </p>
        <% end %>
  </div>
  <form phx-submit="submit_message" phx-change="form_update">
     <input type="text"
     name="message"
     value={@new_message} 
     placeholder="Enter Your Message..."/>
      <button type="submit" />
   </form> 
</div>

